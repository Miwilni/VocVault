# kv/signup_screen.kv
<SignupScreen>:
    ScrollView:
        do_scroll_x: False

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: 20
            padding: 30

            Label:
                text: "Registrieren"
                font_size: '32sp'
                color: 1, 1, 1, 1

            TextInput:
                id: username_input
                hint_text: "Benutzername"
                multiline: False
                size_hint_y: None
                height: '40dp'
                write_tab: False

            TextInput:
                id: email_input
                hint_text: "E-Mail"
                multiline: False
                size_hint_y: None
                height: '40dp'
                write_tab: False

            TextInput:
                id: password_input
                hint_text: "Passwort"
                password: True
                multiline: False
                size_hint_y: None
                height: '40dp'
                write_tab: False

            TextInput:
                id: repeat_password_input
                hint_text: "Passwort wiederholen"
                password: True
                multiline: False
                size_hint_y: None
                height: '40dp'
                write_tab: False

            TextInput:
                id: phone_input
                hint_text: "Telefonnummer"
                multiline: False
                size_hint_y: None
                height: '40dp'
                write_tab: False

            Spinner:
                id: native_language_spinner
                text: "Muttersprache wählen"
                size_hint_y: None
                height: '40dp'
                values: ["Deutsch", "Englisch", "Französisch", "Spanisch", "Italienisch", "Weitere..."]

            BoxLayout:
                size_hint_y: None
                height: '40dp'
                Label:
                    text: "2FA mit Email aktivieren?"
                    color: 1, 1, 1, 1
                Switch:
                    id: two_fa_switch

            Button:
                text: "Registrieren"
                size_hint_y: None
                height: '40dp'
                background_color: 0.49, 0.36, 0.64, 1
                on_release:
                    root.signup_user()

            Button:
                text: "Zurück zum Login"
                size_hint_y: None
                height: '40dp'
                background_color: 0.3, 0.3, 0.3, 1
                on_release:
                    app.sm.current = 'login'
