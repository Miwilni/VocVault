# kv/vault_import_screen.kv
<VaultImportScreen>:
    md_bg_color: self.theme_cls.backgroundColor
    Header:
        id: header
        pos_hint: {"top": 1}
    ScrollView:
        do_scroll_x: False
        pos_hint: {"top": 0.93}
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: 50
            padding: 50
            MDLabel:
                text: "Vault Management"
                font_style: "Display"
                role: "small"
                pos_hint: {"center_x": .5, "center_y": .5}
                halign: "center"
                valign: "center"
                size_hint_y: None
                height: self.texture_size[1]
            MDLabel:
                text: "Neuen Vault eröffnen"
                font_style: "Display"
                role: "small"
                pos_hint: {"center_x": .5, "center_y": .5}
                halign: "center"
                valign: "center"
                size_hint_y: None
                height: self.texture_size[1]
            MDTextField:
                id: english_input
                multiline: False
                size_hint_y: None
                height: '40dp'
                write_tab: False
                MDTextFieldLeadingIcon:
                    icon: "translate"
                MDTextFieldHintText:
                    text: "Englischer Begriff"
                MDTextFieldHelperText:
                    text: "Hello"
                    mode: "persistent"

            MDTextField:
                id: translation_input
                hint_text: "Übersetzung"
                multiline: False
                size_hint_y: None
                height: '40dp'
                write_tab: False
                MDTextFieldLeadingIcon:
                    icon: "earth"
                MDTextFieldHintText:
                    text: "Übersetzter Begriff"

            Spinner:
                id: language_spinner
                text: "Zielsprache wählen"
                size_hint_y: None
                height: '40dp'
                values: ["Deutsch", "Französisch", "Spanisch", "Italienisch", "Weitere..."]

            MDButton:
                size_hint_y: None
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    root.import_vocabulary()
                MDButtonText:
                    text: "Vokabel speichern"
