# kv/header.kv
<Header>:
    md_bg_color: self.theme_cls.backgroundColor
    orientation: 'horizontal'
    size_hint_y: None
    height: '50dp'
    padding: [10, 10, 10, 10]
    spacing: 20

    MDIconButton:
        icon: "menu"
        id: menu_button
        on_release: root.toggle_menu()
        theme_text_color: "Custom"
        text_color: 0.49, 0.36, 0.64, 1

    Label:
        text: "VocVault"
        font_size: '24sp'
        color: 0.49, 0.36, 0.64, 1
        size_hint_x: None
        width: self.texture_size[0]

    Widget:  # Placeholder f√ºr Abstand
        size_hint_x: None
        width: '30dp'
